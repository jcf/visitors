%html
  %head
    %title Stats

    %link{ :rel => 'stylesheet', :href => '/stylesheets/stats.css' }
    %script{ :src => 'https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js', :type => 'text/javascript' }
  %body
    #container
      %h1
        %a{ :href => '/' } Stats
      = yield

    :javascript
      $(function() {
        $('#lookup').submit(function(e) {
          e.preventDefault();
          location.href = '/' + $('#resource_id').val();
          return false;
        });
      });
